## Use Mouse+$alt to drag floating windows to their wanted position ##
floating_modifier $alt

## kill focused window ##
bindsym Ctrl+$alt+$win+q       kill

## change focus ##
bindsym $win+Left              focus left
bindsym $win+Down              focus down
bindsym $win+Up                focus up
bindsym $win+Right             focus right
bindsym $win+h                 focus left
bindsym $win+j                 focus down
bindsym $win+k                 focus up
bindsym $win+l                 focus right

## move focused window ##
bindsym Ctrl+$win+Left         move left
bindsym Ctrl+$win+Down         move down
bindsym Ctrl+$win+Up           move up
bindsym Ctrl+$win+Right        move right
bindsym Ctrl+$win+h            move left
bindsym Ctrl+$win+j            move down
bindsym Ctrl+$win+k            move up
bindsym Ctrl+$win+l            move right

## resize windows ##
bindsym $alt+$win+Left         resize shrink width 10 px or 10 ppt
bindsym $alt+$win+Down         resize grow height 10 px or 10 ppt
bindsym $alt+$win+Up           resize shrink height 10 px or 10 ppt
bindsym $alt+$win+Right        resize grow width 10 px or 10 ppt
bindsym $alt+$win+h            resize shrink width 10 px or 10 ppt
bindsym $alt+$win+j            resize grow height 10 px or 10 ppt
bindsym $alt+$win+k            resize shrink height 10 px or 10 ppt
bindsym $alt+$win+l            resize grow width 10 px or 10 ppt

## split in horizontal orientation ##
bindsym $alt+h                 split h

## split in vertical orientation ##
bindsym $alt+v                 split v

## enter fullscreen mode for the focused container ##
bindsym $alt+f                 fullscreen toggle

## change container layout (stacked, tabbed, toggle split) ##
bindsym $alt+s                 layout stacking
bindsym $alt+w                 layout tabbed
bindsym $alt+e                 layout toggle split

## move workspace to screen ##
bindsym $alt+m                 move workspace to output left
bindsym $alt+n                 move workspace to output up

## toggle tiling / floating ##
bindsym $alt+space             floating toggle

## change focus between tiling / floating windows ##
bindsym $alt+$win+space        focus mode_toggle

## focus containers ##
bindsym $alt+a                 focus parent
bindsym $alt+d                 focus child

## show/hide scratchpad ##
bindsym $alt+minus             move scratchpad
bindsym $alt+plus              scratchpad show

