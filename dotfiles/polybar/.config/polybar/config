format-full-prefix = " "
format-full-prefix-foreground = ${colors.text}
format-full-underline = #58ff2a

ramp-capacity-0 = ""
ramp-capacity-0-foreground = #f00
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""
